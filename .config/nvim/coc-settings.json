{
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "eslint.filetypes": ["javascript", "javascriptreact"],
  "eslint.options": {
    "configFile": "/Users/janik/.config/nvim/.eslintrc.json"
  },
  "eslint.autoFixOnSave": true,
  "tslint.autoFixOnSave": true,
  "prettier.disableLanguages": ["typescript"],
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "css",
    "less",
    "html",
    "python",
    "markdown",
    "javascriptreact",
    "typescriptreact",
    "elm",
    "json"
  ],
  "tsserver.enableJavascript": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",

  "tsserver.implicitProjectConfig.experimentalDecorators": true,
  "javascript.showUnused": false,
  "javascript.validate.enable": false,
  "javascript.format.semicolons": "remove",

  "suggest.maxCompleteItemCount": 20,

  "html.format.enable": true,
  "html.autoClosingTags": true,

  "emmet.showAbbreviationSuggestions": true,
  "python.formatting.provider": "autopep8",
  "python.linting.pep8Enabled": true,

  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "change"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "explorer.width": 35,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "i": false,
    "<cr>": ["expandable?", "cd", "open"],
    "v": "open:vsplit",
    "s": "open:split:intelligent",
    "t": "open:tab"
  },
  "explorer.file.column.git.icon.added": "+",
  "explorer.file.column.git.icon.deleted": "-",
  "explorer.file.column.git.icon.renamed": "R",
  "explorer.file.column.git.icon.untracked": "?",
  "explorer.file.column.git.showIgnored": false,
  "explorer.file.column.git.icon.mixed": "*",
  "explorer.file.column.git.icon.ignored": "!",
  "explorer.file.column.git.icon.unmodified": " ",
  "explorer.file.column.git.icon.copied": "C",
  "explorer.file.column.git.icon.modified": "~",
  "explorer.file.column.git.icon.unmerged": "U"
}
